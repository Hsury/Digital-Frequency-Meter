LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
ENTITY SEG8 IS
	PORT(Data : IN INTEGER RANGE 0 TO 9;
	     Point : IN STD_LOGIC;
	     DUAN : OUT STD_LOGIC_VECTOR (7 DOWNTO 0));
END ENTITY SEG8;
ARCHITECTURE behav OF SEG8 IS
BEGIN
	WITH Data SELECT
	DUAN <= (NOT Point) & "1000000" WHEN 0,
	        (NOT Point) & "1111001" WHEN 1,
			  (NOT Point) & "0100100" WHEN 2,
			  (NOT Point) & "0110000" WHEN 3,
			  (NOT Point) & "0011001" WHEN 4,
			  (NOT Point) & "0010010" WHEN 5,
			  (NOT Point) & "0000010" WHEN 6,
			  (NOT Point) & "1111000" WHEN 7,
			  (NOT Point) & "0000000" WHEN 8,
			  (NOT Point) & "0010000" WHEN 9;
			  UNAFFECTED WHEN OTHERS;
END PROCESS;